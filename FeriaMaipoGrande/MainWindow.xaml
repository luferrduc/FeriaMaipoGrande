                <DropShadowEffect BlurRadius="8" Color="#D9D9D9"/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnPagos" Content="Gestionar Pagos" HorizontalAlignment="Left" Margin="479,252,0,0" VerticalAlignment="Top" Width="196" Height="106" Foreground="White" FontWeight="Bold" Style="{DynamicResource ButtonStyle1}">
