            </Button.Effect>
        </Button>
        <Button x:Name="btnContratos" Content="Gestionar Contratos" HorizontalAlignment="Left" Margin="297,252,0,0" VerticalAlignment="Top" Width="160" Height="106" Foreground="White" FontWeight="Bold" Style="{DynamicResource ButtonStyle1}">
            <Button.Effect>
                <DropShadowEffect BlurRadius="8" Color="#D9D9D9"/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnSubastas" Content="Gestionar Subastas" HorizontalAlignment="Left" Margin="145,252,0,0" VerticalAlignment="Top" Width="127" Height="106" Foreground="White" FontWeight="Bold" Style="{DynamicResource ButtonStyle1}">
