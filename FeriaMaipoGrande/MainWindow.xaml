                <DropShadowEffect BlurRadius="8" Color="#D9D9D9"/>
            </Button.Effect>
        </Button>
        <Image HorizontalAlignment="Left" Height="55" Margin="682,10,0,0" VerticalAlignment="Top" Width="53"/>
       

    </Grid>

</Window>
