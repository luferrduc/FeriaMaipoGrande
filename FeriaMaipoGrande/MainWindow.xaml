            </Button.Effect>
        </Button>
        <Button x:Name="btnVentas" Content="Gestionar Ventas" HorizontalAlignment="Left" Margin="548,122,0,0" VerticalAlignment="Top" Width="127" Height="106" Foreground="White" FontWeight="Bold" Style="{DynamicResource ButtonStyle1}">
