            <Label Content="Dirección:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="21" Canvas.Top="137"/>
            <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="89" Canvas.Top="138" RenderTransformOrigin="1.096,0.709"/>
            <Label x:Name="lblApellidoM" Content="Apellido M. :" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="106"/>
            <Label x:Name="lblApellidoP" Content="Apellido P. :" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="14" Canvas.Top="80"/>
            <TextBox x:Name="txtApellidoP" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="89" Canvas.Top="83"/>
            <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="88" Canvas.Top="56"/>
            <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="88" Canvas.Top="28"/>
            <Label x:Name="lblNumId" Content="N° ID:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.188,0.727" Canvas.Left="41" Canvas.Top="28"/>
            <Label x:Name="lblNombre" Content="Nombre:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.188,0.727" Canvas.Left="26" Canvas.Top="55"/>
            <TextBox x:Name="txtApellidoM" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="89" Canvas.Top="110"/>
        </Canvas>

    </Grid>
</Window>
